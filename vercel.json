{
  "version": 2,
  "builds": [
    {
      "src": "app.js",  // Replace with your main server file name
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          ".env" // Include your .env file for non-deployment sensitive data
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)", // Catch all routes and forward to your Express app
      "dest": "app.js"  // Replace with your main server file name
    }
  ]
}
